<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:skiarate="clr-namespace:SkiaRate;assembly=SkiaRate.Forms"
    xmlns:local="clr-namespace:SweetsDokkana.Styles"
    x:Class="SweetsDokkana.Views.RatePopupPage">
    
    <Frame HorizontalOptions="Center" VerticalOptions="Center" 
           BackgroundColor="White" Margin="20" Padding="20" CornerRadius="20" HasShadow="True" WidthRequest="200" HeightRequest="150">

        <StackLayout>
            <skiarate:RatingView ColorOn="Gold" Count="5" />

            <local:RoundedButton Margin="20,20,20,0" 
                         HeightRequest="50"
                         Text="Done"
                         Style="{StaticResource MainButton}"
                         HorizontalOptions="FillAndExpand"
                         x:Name="btnDone"
                        Clicked="BtnDone_Clicked"/>
        </StackLayout>

    </Frame>

</pages:PopupPage>