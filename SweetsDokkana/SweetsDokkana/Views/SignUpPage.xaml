<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SweetsDokkana.Styles"
             NavigationPage.HasNavigationBar="false"
             x:Class="SweetsDokkana.Views.SignUpPage">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Label HeightRequest="100"  
                          HorizontalOptions="FillAndExpand" 
                          Text="Sweet Dokkana" 
                          TextColor="Black" 
                          FontSize="40" 
                          HorizontalTextAlignment="Center"
                          VerticalTextAlignment="Center">
                    <Label.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="iOS" Value="Lobster-Regular" />
                            <On Platform="Android" Value="Handlee-Regular.ttf#Handlee-Regular" />
                        </OnPlatform>
                    </Label.FontFamily>
                </Label>

                <local:RoundedEntry  Margin="20,20,20,0" 
                         HeightRequest="50" 
                         Placeholder="Name">
                </local:RoundedEntry>

                <local:RoundedEntry Margin="20,0,20,0" 
                        HeightRequest="50" IsPassword="true"
                        Placeholder="Password">
                </local:RoundedEntry>

                <local:RoundedEntry  Margin="20,0,20,0" 
                         HeightRequest="50" 
                         Placeholder="Repeat Password">
                </local:RoundedEntry>

                <local:RoundedEntry  Margin="20,0,20,0" 
                         HeightRequest="50" 
                         Placeholder="Email">
                </local:RoundedEntry>

                <local:RoundedEntry  Margin="20,0,20,0" 
                         HeightRequest="50" 
                         Placeholder="Phone">
                </local:RoundedEntry>

                <local:RoundedEntry  Margin="20,0,20,0" 
                         HeightRequest="50" 
                         Placeholder="Address">
                </local:RoundedEntry>

                <local:RoundedButton Margin="20,20,20,0" 
                         HeightRequest="50" 
                         Text="SignUp"
                         TextColor="#c5d86d"
                         HorizontalOptions="FillAndExpand"
                         x:Name="btnSignUp"
                         Clicked="BtnSignUp_Clicked"/>

                <Button Text="Already a Cleint" 
                        HorizontalOptions="Center"
                        x:Name="btnclient"
                        Clicked="Btnclient_Clicked"
                        BackgroundColor="White"
                        TextColor="{StaticResource primary}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>