<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutsApp.StackLayout2">

    <StackLayout>
        <StackLayout Padding="10">
            <Label Text="nyc_photographer"/>
        </StackLayout>
        <ActivityIndicator Color="Black" IsRunning="{Binding Source={x:Reference image}, Path=IsLoading}"/>
        <Image x:Name="image" Aspect="Fill"/>
        <StackLayout Orientation="Horizontal" Spacing="20" Padding="10,0">
            <Label Text="Like" TextColor="Blue"/>
            <Label Text="Comment" TextColor="BlueViolet"/>
            <Label Text="Share" TextColor="Blue"/>
        </StackLayout>
        <StackLayout Padding="10">
            <BoxView Color="#f0f0f0" HeightRequest="1"/>
            <Label Text="700 Likes" FontAttributes="Bold"/>
            <Label TextColor="#444" Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark."/>
        </StackLayout>
    </StackLayout>
    
    
</ContentPage>