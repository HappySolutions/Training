<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutsApp.StacklayoutXaml"
             BackgroundColor="#127ac7">

    <StackLayout VerticalOptions="Center">
        <StackLayout HorizontalOptions="Center" Spacing="5" Padding="0,0,0,20">
            <Label Text="Welcome to Xamarin!"
           VerticalTextAlignment="Center"
           FontSize="30"
           FontAttributes="Bold"
           TextColor="White"/>
            <Label Text="Cross-platform apps made easy"
            HorizontalOptions="Center"
            FontSize="18"
            TextColor="White"/>
        </StackLayout>
        <StackLayout Spacing="10">
            <Button Text="Login" BackgroundColor=" #1dabf0" TextColor="White"/>
            <Button Text="Register" BackgroundColor=" #1dabf0" TextColor="White"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
